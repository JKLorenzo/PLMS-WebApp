{
    "private": true,
    "engines": {
        "node": "16.x"
    },
    "scripts": {
        "setup": "composer install && npm ci && npm run sqlite && copy .env.example .env && php artisan key:generate",
        "sqlite": "echo off > ./database/database.sqlite && php artisan migrate",
        "serve": "php artisan serve",
        "ws": "php artisan websockets:serve",
        "build": "npm run production && npm run compress",
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "production": "mix --production",
        "compress": "bread-compressor -s public/css/*.css public/js/*.js"
    },
    "dependencies": {
        "@googlemaps/js-api-loader": "^1.13.2",
        "bootstrap-icons": "^1.7.2",
        "laravel-echo": "^1.11.3",
        "popper.js": "^1.16.1",
        "pusher-js": "^7.0.4"
    },
    "devDependencies": {
        "@popperjs/core": "^2.10.2",
        "@types/google.maps": "^3.47.2",
        "axios": "^0.21",
        "bootstrap": "^5.1.3",
        "bread-compressor-cli": "^1.1.0",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "postcss": "^8.1.14",
        "resolve-url-loader": "^4.0.0",
        "sass": "^1.32.11",
        "sass-loader": "^11.0.1",
        "ts-loader": "^9.2.6",
        "typescript": "^4.5.5"
    }
}
