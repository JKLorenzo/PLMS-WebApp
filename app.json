{
    "addons": ["heroku-postgresql", "heroku-redis", "scheduler"],
    "scripts": {
        "postdeploy": [
            "php artisan db:seed",
            "php artisan passport:client --personal"
        ]
    },
    "buildpacks": [
        {
            "url": "heroku/php"
        },
        {
            "url": "heroku/nodejs"
        }
    ],
    "env": {
        "APP_NAME": "Laravel",
        "APP_ENV": "production",
        "APP_KEY": {
            "generator": "secret"
        },
        "APP_DEBUG": "false",
        "LOG_CHANNEL": "errorlog",
        "DB_CONNECTION": "pgsql",
        "CACHE_DRIVER": "redis",
        "QUEUE_CONNECTION": "redis",
        "SESSION_DRIVER": "redis"
    }
}
